<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="col-12 col-md-6">
      <label for="post-title">Post Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div class="col-12 col-md-6">
      <label for="post-content">Post Description</label>
      <textarea rows="5" cols="10" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn btn-info ml-3 mb-5">Add Post</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <div>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <div class="btn-dashboard mb-4">
        <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary">Edit/Delete Post</a>
      {{!-- <button type="button" value={{post.id}} onclick= "deleteFormHandler()" class="delete-post-btn btn btn-danger">Delete Post</button> --}}
      </div>
    </li>
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>

